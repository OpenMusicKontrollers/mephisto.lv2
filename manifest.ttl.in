@prefix lv2:      <http://lv2plug.in/ns/lv2core#> .
@prefix owl:			<http://www.w3.org/2002/07/owl#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ui:       <http://lv2plug.in/ns/extensions/ui#> .
@prefix kx:       <http://kxstudio.sf.net/ns/lv2ext/external-ui#> .
@prefix pset:     <http://lv2plug.in/ns/ext/presets#> .

@prefix mephisto:		<http://open-music-kontrollers.ch/lv2/mephisto#> .

# to please sord_validate
kx:Widget
	a rdfs:Class, owl:Class ;
	rdfs:subClassOf ui:UI .
kx:Host
	a lv2:Feature .

# MBedC Mono
mephisto:mono
	a lv2:Plugin ;
	lv2:minorVersion @MINOR_VERSION@ ;
	lv2:microVersion @MICRO_VERSION@ ;
	ui:ui mephisto:showUI ;
	#ui:ui mephisto:kxUI ;
	lv2:binary <mephisto@MODULE_SUFFIX@> ;
	rdfs:seeAlso <mephisto.ttl> .

# MBedC Mono
mephisto:stereo
	a lv2:Plugin ;
	lv2:minorVersion @MINOR_VERSION@ ;
	lv2:microVersion @MICRO_VERSION@ ;
	ui:ui mephisto:showUI ;
	#ui:ui mephisto:kxUI ;
	lv2:binary <mephisto@MODULE_SUFFIX@> ;
	rdfs:seeAlso <mephisto.ttl> .

# UIs
mephisto:showUI
	a ui:UI ;
	ui:binary <mephisto_ui@MODULE_SUFFIX@> ;
	rdfs:seeAlso <mephisto_ui.ttl> .
mephisto:kxUI
	a kx:Widget ;
	ui:binary <mephisto_ui@MODULE_SUFFIX@> ;
	rdfs:seeAlso <mephisto_ui.ttl> .

# Preset banks
mephisto:bank-filter
	a pset:Bank ;
	rdfs:label "Filter bank" .
mephisto:bank-instrument
	a pset:Bank ;
	rdfs:label "Instrument bank" .

# Filter bank
mephisto:bank-filter_through
	a pset:Preset ;
	lv2:appliesTo mephisto:mono ,
		mephisto:stereo ;
	pset:bank mephisto:bank-filter ;
	rdfs:label "Through" ;
	rdfs:seeAlso <presets.ttl> .

# Filter bank
mephisto:bank-instrument_osc
	a pset:Preset ;
	lv2:appliesTo mephisto:mono ,
		mephisto:stereo ;
	pset:bank mephisto:bank-instrument ;
	rdfs:label "Oscillator" ;
	rdfs:seeAlso <presets.ttl> .
